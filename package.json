{
  "name": "@strong-roots-capital/memoize",
  "version": "0.0.0-development",
  "description": "Higher-order memoization function",
  "main": "dist/src/memoize.js",
  "types": "dist/src/memoize.d.ts",
  "scripts": {
    "build": "tsc --build .",
    "clean": "rimraf --no-glob dist",
    "lint-staged": "lint-staged",
    "ava": "ava -v",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --ext ts --fix .",
    "prettier": "prettier --list-different .",
    "prettier:fix": "prettier --write .",
    "watch:lint": "nodemon -e 'ts js json' -x 'npm run lint || true'",
    "test": "nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pre-commit": "lint-staged",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strong-roots-capital/memoize.git"
  },
  "author": "Eric Crosson <eric.s.crosson@utexas.edu> (https://github.com/EricCrosson)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/strong-roots-capital/memoize/issues"
  },
  "homepage": "https://github.com/strong-roots-capital/memoize",
  "dependencies": {
    "lru_map": "0.4.1"
  },
  "devDependencies": {
    "@ericcrosson/eslint-config": "3.0.0",
    "@ericcrosson/prettier-config": "1.0.0",
    "@semantic-release/git": "10.0.1",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "ava": "4.1.0",
    "ava-fast-check": "5.0.0",
    "codecov": "3.8.2",
    "eslint": "8.12.0",
    "eslint-plugin-ava": "13.2.0",
    "eslint-plugin-security": "1.4.0",
    "fast-check": "2.24.0",
    "lint-staged": "12.3.7",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "files": [
    "dist/src/"
  ],
  "ava": {
    "files": [
      "!dist/**/*.d.ts",
      "test/**/test-*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "keywords": [
    "memoize"
  ],
  "publishConfig": {
    "access": "public"
  }
}

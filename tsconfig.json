{
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
